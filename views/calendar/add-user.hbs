<div class="row mt-5">
    <div class="col-10 offset-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        <p class="fs-1">Add user in calendar - {{calendar.name}}</p>
        {{#if error}}
        <div class="alert alert-danger" role="alert">
            {{error}}
        </div>
        {{/if}}
        <form action="/calendar/add-user/{{calendar._id}}" method="POST">
            <input type="hidden" name="_csrf" value="{{ csrf }}" />
            <div class="mb-3">
                <label for="login" class="form-label">Login</label>
                <input type="login" name="login" class="form-control" id="login">
            </div>
            <div class="mb-3">
                <label for="login" class="form-label">Add status admin?</label>
                <input class="form-check-input" type="checkbox" aria-label="Checkbox for following text input">
            </div>
            <button type="submit" class="btn btn-success w-100">Add user</button>
        </form>
    </div>
</div>